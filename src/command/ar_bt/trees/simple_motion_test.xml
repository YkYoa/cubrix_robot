<root BTCPP_format="4">
  <BehaviorTree ID="SimpleMotionTest">
    <Sequence name="TestSequence">
      <!-- Configure PILZ planner -->
      <SetPlanner pipeline="pilz" planner="PTP"/>
      
      <!-- Move to home position (all zeros) -->
      <MoveToJoint target_joints="0;0;0;0;0;0" name="MoveToHome"/>
      
      <!-- Wait a bit -->
      <Delay delay_msec="100">
        <AlwaysSuccess/>
      </Delay>

      <!-- Set velocity to 30% speed -->
      <SetVelocityScaling factor="0.5"/>
      
      <!-- Set acceleration to 50% -->
      <SetAccelerationScaling factor="0.5"/>

      
      <!-- Move to a different position -->
      <!-- <MoveToJoint target_joints="0;0.5;-0.5;-1;0;0" name="MoveToPosition1"/> -->
      <MoveToJoint target_joints="0.95;0.35;-1.3;-1.5;0;0" name="MoveToPosition1"/>
      <!-- <MoveToJoint target_joints="-0.38;0.17;-0.24;1.2;0;0.5" name="MoveToPosition3"/> -->
      <MoveToJoint target_joints="-1.2;0.87;-0.35;0.26;0;-0.5" name="MoveToPosition2"/>
      
      <!-- Wait -->
      <Delay delay_msec="100">
        <AlwaysSuccess/>
      </Delay>
      
      <!-- Return home -->
      <MoveToJoint target_joints="0;0;0;0;0;0" name="ReturnHome"/>
    </Sequence>
  </BehaviorTree>
</root>
