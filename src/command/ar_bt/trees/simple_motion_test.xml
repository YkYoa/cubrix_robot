<root BTCPP_format="4">
  <BehaviorTree ID="SimpleMotionTest">
    <Sequence name="MainSequence">
      <!-- Configure PILZ planner (do this once) -->
      <SetPlanner pipeline="pilz" planner="PTP"/>
      <SetVelocityScaling factor="0.3"/>
      <SetAccelerationScaling factor="0.3"/>
      
      <!-- Move to home position first -->
      <MoveToJoint target_joints="0;0;0;0;0;0" name="MoveToHome"/>
      
      <!-- Loop the motion sequence 5 times -->
      <Repeat num_cycles="5">
        <Sequence name="MotionLoop">
          <!-- Move to position 1 -->
          <MoveToJoint target_joints="0;0.5;-0.5;0;0;0" name="MoveToPosition1"/>
          
          <Delay delay_msec="100">
            <AlwaysSuccess/>
          </Delay>
          
          <!-- Move to position 2 -->
          <MoveToJoint target_joints="0;0.3;-0.3;0;0;0" name="MoveToPosition2"/>
          
          <Delay delay_msec="100">
            <AlwaysSuccess/>
          </Delay>
          
          <!-- Return home -->
          <MoveToJoint target_joints="0;0;0;0;0;0" name="ReturnHome"/>
          
          <Delay delay_msec="200">
            <AlwaysSuccess/>
          </Delay>
        </Sequence>
      </Repeat>
    </Sequence>
  </BehaviorTree>
</root>
